{
  "loggers": {
    "default": {
      "level": "debug",
      "sinks": ["console", "file"]
    },
    "game": {
      "level": "trace",
      "sinks": ["console", "game_file"],
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [%n] [%l] [%t] %v"
    },
    "dice": {
      "level": "debug", 
      "sinks": ["console", "dice_file"],
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [DICE] [%l] %v"
    },
    "player": {
      "level": "debug",
      "sinks": ["console", "player_file"],
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [PLAYER] [%l] [ID:%X] %v"
    },
    "performance": {
      "level": "info",
      "sinks": ["perf_file"],
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [PERF] %v"
    }
  },
  "sinks": {
    "console": {
      "type": "stdout_color_mt",
      "level": "debug",
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [%^%l%$] %v"
    },
    "file": {
      "type": "rotating_file_mt", 
      "filename": "logs/liarsdice.log",
      "max_size": "10MB",
      "max_files": 5,
      "level": "trace",
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [%n] [%l] [%t] [%s:%#] %v"
    },
    "game_file": {
      "type": "rotating_file_mt",
      "filename": "logs/game.log", 
      "max_size": "5MB",
      "max_files": 3,
      "level": "trace"
    },
    "dice_file": {
      "type": "rotating_file_mt",
      "filename": "logs/dice.log",
      "max_size": "2MB", 
      "max_files": 2,
      "level": "debug"
    },
    "player_file": {
      "type": "rotating_file_mt",
      "filename": "logs/player.log",
      "max_size": "3MB",
      "max_files": 3,
      "level": "debug"
    },
    "perf_file": {
      "type": "rotating_file_mt",
      "filename": "logs/performance.log",
      "max_size": "5MB",
      "max_files": 2,
      "level": "info"
    }
  },
  "async": {
    "enabled": true,
    "queue_size": 8192,
    "thread_count": 1,
    "overflow_policy": "block"
  },
  "global": {
    "level": "trace",
    "flush_on": "error",
    "flush_interval_seconds": 5
  }
}