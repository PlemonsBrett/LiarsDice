{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "./scripts/build.sh",
            "args": ["Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project in Debug mode"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "./scripts/build.sh",
            "args": ["Release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project in Release mode"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "./scripts/test.sh",
            "args": [],
            "group": "test",
            "dependsOn": "Build Debug",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run all unit tests"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Clean the build directory"
        },
        {
            "label": "Configure CMake Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-S", ".",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Configure CMake for Debug build"
        },
        {
            "label": "Configure CMake Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-S", ".",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Configure CMake for Release build"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "-j"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build using CMake"
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "find",
            "args": [
                ".",
                "-name", "*.cpp",
                "-o", "-name", "*.hpp",
                "|", "xargs", "clang-format", "-i"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Format all C++ source files"
        },
        {
            "label": "Lint Code",
            "type": "shell",
            "command": "clang-tidy",
            "args": [
                "src/**/*.cpp",
                "-p", "build"
            ],
            "group": "build",
            "dependsOn": "Configure CMake Debug",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Run clang-tidy on source files"
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--install", "build",
                "--prefix", "/usr/local"
            ],
            "group": "build",
            "dependsOn": "Build Release",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Install the project to system"
        }
    ]
}